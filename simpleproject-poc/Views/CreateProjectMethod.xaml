<Window x:Class="simpleproject_poc.Views.CreateProjectMethod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simpleproject_poc.Views"
        mc:Ignorable="d"
        Title="Vorgehensmodell erstellen" Height="110.633" Width="495.312">
    <Grid>
        <Label Content="Vorgehensmodell Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMethodName" HorizontalAlignment="Left" Height="23" Margin="155,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320"/>
        <Button Content="Erstellen" HorizontalAlignment="Left" Margin="400,42,0,0" VerticalAlignment="Top" Width="75" Command="{Binding btnCreateNewProjectMethod}" CommandParameter="{Binding Text, ElementName=txtMethodName}"/>

    </Grid>
</Window>
