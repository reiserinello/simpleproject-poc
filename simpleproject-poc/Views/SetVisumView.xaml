<Window x:Class="simpleproject_poc.Views.SetVisumView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simpleproject_poc.Views"
        mc:Ignorable="d"
        Title="SetVisumView" Height="116.225" Width="340.315">
    <Grid>
        <Label Content="Visum (Initialen):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtVisum" HorizontalAlignment="Left" Height="26" Margin="113,10,0,0" TextWrapping="Wrap" Text="{Binding txtVisum}" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="btnReleasePhaseWithVisum" Content="Freigeben" HorizontalAlignment="Left" Margin="238,41,0,0" VerticalAlignment="Top" Width="75" Command="{Binding btnReleasePhaseWithVisum}"/>
    </Grid>
</Window>
